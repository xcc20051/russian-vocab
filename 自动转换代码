<script>
function convertWords() {
    const input = document.getElementById('rawInput').value;
    const lines = input.split('\n');
    let result = [];

    lines.forEach(line => {
        if (line.trim()) {
            // è‡ªåŠ¨è¯†åˆ«ç©ºæ ¼ã€åˆ¶è¡¨ç¬¦æˆ–é€—å·åˆ†éš”
            const parts = line.split(/\s{2,}|\t/); 
            if (parts.length >= 2) {
                const ru = parts[0].trim();
                const cn = parts[1].trim();
                result.push(`{ru: "${ru}", cn: "${cn}"}`);
            } else {
                // å¦‚æœåˆ†éš”ä¸æ˜æ˜¾ï¼Œå°è¯•æ™®é€šç©ºæ ¼
                const simpleParts = line.trim().split(/\s+/);
                if (simpleParts.length >= 2) {
                    const ru = simpleParts[0].trim();
                    const cn = simpleParts.slice(1).join(' ').trim();
                    result.push(`{ru: "${ru}", cn: "${cn}"}`);
                }
            }
        }
    });
    document.getElementById('finalOutput').value = result.join(',\n') + ',';
}
</script>
